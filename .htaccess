Options +FollowSymlinks

<FilesMatch "(theme.json|config.json|error_log)">
	Order Allow,Deny
	Deny from all
</FilesMatch >

# If the above lines doesn't work, set the RewriteBase manually
# Most likely if this application does not reside in the document root
DirectoryIndex index.php

<IfModule mod_rewrite.c>
	RewriteEngine on
	RewriteBase /
	RewriteCond %{REQUEST_FILENAME} !-f
	RewriteCond %{REQUEST_FILENAME} !-d

	RewriteRule ^(.*)$ index.php/?route=$1 [L]
</IfModule>